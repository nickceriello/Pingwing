on idle	tell application "ircle3.0.4 US"		set counter to 1		repeat 10 times			if get status of connection counter is connected then				display "Pingwing is sending a ping to connection " & counter with color 2				type "/ping server" in connection counter			end if			set counter to counter + 1		end repeat		return 900	end tellend idleon load()	tell application "ircle3.0.4 US"		display "Pingwing is running..." with color 2	end tellend loadon unload()	tell application "ircle3.0.4 US"		display "Pingwing has stopped..." with color 2	end tellend unload